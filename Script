toolBtn.MouseButton1Click:Connect(function()
    local id = tonumber(inputBox.Text)
    if id then
        local success, model = pcall(function()
            return InsertService:LoadAsset(id)
        end)
        if success and model then
            -- Recursive search for any Tool instance in the loaded model
            local function findTool(obj)
                if obj:IsA("Tool") then
                    return obj
                end
                for _, child in pairs(obj:GetChildren()) do
                    local toolFound = findTool(child)
                    if toolFound then
                        return toolFound
                    end
                end
                return nil
            end

            local tool = findTool(model)
            if tool then
                tool.Parent = player.Backpack
            else
                warn("No Tool found inside model")
            end

            model:Destroy()
        else
            warn("Failed to load asset with ID:", id)
        end
    else
        warn("Invalid Tool ID")
    end
end)
